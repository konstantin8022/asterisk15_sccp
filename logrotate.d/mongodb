/var/log/mongodb/*.log {
       weekly
       rotate 10
       copytruncate
       delaycompress
       compress
       notifempty
       missingok
       postrotate
          if /bin/kill -USR1 `cat /var/run/mongodb/mongod.pid 2>/dev/null` 2> /dev/null; then
            sleep 2
            rm -f $(ls /var/log/mongodb/*.log.$(date +%Y-%m-%dT%H-)* 2>/dev/null | sort | tail -n 1) || true
          else
            rm -f /var/log/mongodb/*.log
          fi
       endscript
}
